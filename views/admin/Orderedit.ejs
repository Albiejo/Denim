    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const updateOrderForm = document.getElementById('updateOrderForm');
            const updateOrderButton = document.getElementById('updateOrderButton');
        
            updateOrderForm.addEventListener('submit', function (event) {
                event.preventDefault(); // Prevent the default form submission
        
                // Show a SweetAlert confirmation dialog
                Swal.fire({
                    title: 'Update Order',
                    text: 'Are you sure you want to update this order?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Yes',
                    cancelButtonText: 'No',
                }).then((result) => {
                    if (result.isConfirmed) {
                        // User confirmed, continue with the form submission
                        updateOrderForm.submit();
                    }
                });
            });
        });

      

