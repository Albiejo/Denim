                                                            </a>
                                                            <a href="/admin/rejectitemreturn?orderid=<%= Orderr._id %>&itemid=<%= items[i]._id %>" class="reject-button">
                                                                <button class="btn btn-danger" style="margin-left: 10%;">Reject</button>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div
                                <% } %>
