<%-include(".././../Layouts/adminhead.ejs")%>


        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products grid</h2>
                   
                </div>
                <div>
                    <a href="/admin/addproducts" class="btn btn-primary btn-sm rounded">Add new Product</a>
                </div>
            </div>
            <!-- <div class="card mb-4"> -->
                <header class="card-header">
                    <div class="row gx-3" >
                      <form method="post" action="/admin/products">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control" name="Searchquery">
                            <button class="btn" type="submit">Search</button>
                        </div>
                      </form>
                        <!-- <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Latest added</option>
                                <option>Cheap first</option>
                                <option>Most viewed</option>
                            </select>
                        </div> -->
                    </div>
          </header>
             
                <div class="card-body">
                  <%if(typeof message !=="undefined"){%>
                    <p style="color:red" id="errormsg"><%=message%></p>
                  <%}%>
                    <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-4">
                      <% for(let i=0; i< productData.length; i++) { %>
                        <div class="col">
                          <div class="card card-product-grid">
                            <img src="/cloud_images/<%=productData[i].images[0].url%>" style="height: 300px; width: 350px;" alt="Product">
                            <div class="info-wrap">
                              <p class="title text-truncate"><%=productData[i].productName%></p>
                              <div class="price mb-2">$<%=productData[i].offerPrice%></div>
                              <a href="/admin/editProduct?id=<%=productData[i]._id%>" class="btn btn-sm font-sm rounded btn-brand">
                                <i class="material-icons md-edit"></i> Edit
                              </a>
                              <a href="/admin/deleteproduct?id=<%=productData[i]._id%>" class="btn btn-sm font-sm btn-light rounded">
                                <i class="material-icons md-delete_forever"></i> Delete
                              </a>
                            </div>
                          </div>
                        </div>
                      <% } %>
                    </div>
                  </div>
        
               
            </div> <!-- card end// -->


            <div class="pagination">
                <% if (currentPage > 1) { %>
                  <a href="/admin/products?page=<%= currentPage - 1 %>">&laquo; Previous &nbsp;</a>
                <% } %>
              
                Page <%= currentPage %> of <%= totalPages %>
              <br>
                <% if (currentPage < totalPages) { %>
                  <a href="/admin/products?page=<%= currentPage + 1 %>"> &nbsp; Next &raquo;</a>
                <% } %>
              </div>

              <br><br>
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, Denim Stores  .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="admin-assets/js/vendors/select2.min.js"></script>
    <script src="admin-assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="admin-assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="admin-assets/js/main.js" type="text/javascript"></script>

</body>


