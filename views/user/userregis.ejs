        const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$%^&+=!])(?=\S+$).{8,}$/;


        nameInput.addEventListener('input', () => {
            const name = nameInput.value;
            const isValid = validateName(name);

        });

        emailInput.addEventListener('input', () => {
            const email = emailInput.value;
            const isValid = validateEmail(email);

        });
        passwordInput.addEventListener('input', () => {
            const password = passwordInput.value;
            const isValid = validatePassword(password);

        });
        confirmPasswordInput.addEventListener('input', () => {
            const pass = passwordInput.value;
            const password = confirmPasswordInput.value;
            const isValid = validateConfirmPassword(pass, password);

        });


        function validateName(name) {
            if (name.trim().length < 1) {
                nameValidationMessage.textContent = "Name cannot be empty"
                return false
            }
            if (!nameRegex.test(name.trim())) {
                nameValidationMessage.textContent = "Enter a valid name"
                return false
            }
            nameValidationMessage.textContent = ""
            return true
        }

        function validateEmail(email) {
            if (email.trim().length < 1) {
                emailValidationMessage.textContent = "Email cannot be empty"
                return false
            }
            if (!emailRegex.test(email.trim())) {
                emailValidationMessage.textContent = "Enter a valid email Id"
                return false
            }
            emailValidationMessage.textContent = ""
            return true
        }
        function validatePassword(password) {
            if (password.trim().length < 1) {
                passwordValidationMessage.textContent = "Password cannot be empty"
                return false
            }
            if (!passwordRegex.test(password.trim())) {
                passwordValidationMessage.textContent = "Password must contain one uppercase , one lowercase, one special character and one digit"
                return false
            }
            passwordValidationMessage.textContent = ""
            return true
        }




        function validateConfirmPassword(pass, confirm) {
            if (confirm.trim().length < 1) {
                confirmPasswordValidationMessage.textContent = "Confirm Password cannot be empty"
                return false
            }

            if (pass != confirm) {
                confirmPasswordValidationMessage.textContent = "Password should be same"
                return false
            }
            confirmPasswordValidationMessage.textContent = ""
            return true
        
    }

     

        function checkFormValidity() {
            let nameIsValid = validateName(nameInput.value);
            let emailIsValid = validateEmail(emailInput.value);
            let passwordIsValid = validatePassword(passwordInput.value);
            let confirmPassword = validateConfirmPassword(passwordInput.value, confirmPasswordInput.value)

            if (nameIsValid && emailIsValid && passwordIsValid && confirmPassword) {
                return true
            } else {
                return false
            }
        }
