<%-include(".././../Layouts/userheader.ejs")%>



    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/loginhomepage" rel="nofollow">Home</a>
                    <span></span> Shop
                    <span></span> Wishlist
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <%if(productsInwishlist.length< 1){%>
                                <p style="color: red; font-weight: bolder;">YOUR WISHLIST IS EMPTY</p>
                                <p style="color: black; font-weight: bolder;">Add items that you like to your wishlist. Review them anytime and easily move them to the cart.</p>
                              <a href="/loginhomepage">Click here to Continue Shopping</a>
                                <%}else{%>
                                    <div class="col-lg-6">
                                        <a href="/addfullitemstocart"><button class="btn btn-success">Move all items to cart</button></a>
                                        <a href="/removeFullItems"><button class="btn btn-success">Remove all items</button></a>
                                    </div>
                            <table class="table shopping-summery text-center">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col" colspan="2">Product</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Stock Status</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                            <%for(let i=0; i< productsInwishlist.length; i++){%>
                                                <tr>
                                                    <td class="image product-thumbnail"><a href="/productview?id=<%=productsInwishlist[i]._id %>"><img src="/cloud_images/<%=productsInwishlist[i].images[0].url%>" alt="#"></a></td>
                                                    <td class="product-des product-name">
                                                        <h5 class="product-name"><a href="/productview?id=<%=productsInwishlist[i]._id %>"><%=productsInwishlist[i].productName%></a></h5>
                                                        <p class="font-xs"><%=productsInwishlist[i].Discription%>
                                                        </p>
                                                    </td>
                                                    <td class="price" data-title="Price"><span>â‚¹<%=productsInwishlist[i].offerPrice%></span></td>
                                                   <%if(productsInwishlist[i].stock>0){%>
                                                    <td class="text-center" data-title="Stock">
                                                        <span class="color3 font-weight-bold" style="font-weight: bold;">In Stock</span>
                                                    </td>
                                                <form method="post" action="/addtocartfromwishist">
                                                        <td class="text-right" data-title="Cart">
                                                            <button class="btn btn-sm"><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</button>
                                                            <input type="hidden" value="<%=productsInwishlist[i]._id%>" name="productId">
                                                        </td>
                                                </form>
                                                
                                                    <%}else{%>
                                                        <td class="text-center" data-title="Stock">
                                                            <span class="color3 font-weight-bold" style="color: red; font-weight: bolder;">Out of Stock</span>
                                                        </td>
                                                        <td class="text-right" data-title="Cart">
                                                            <button class="btn btn-sm" disabled><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</button>
                                                            <input type="hidden" value="<%=productsInwishlist[i]._id%>" name="productId">
                                                        </td>
                
                                                      <%}%>
                                            
                                                    <td class="action" data-title="Remove"><a href="/deletewishlistitem?itemId=<%=userData.wishlist[i]._id%>"><i class="fi-rs-trash"></i></a></td>
                                                </tr>
                                                <%}%>
                                        <%}%>
                                     
                                    
                                    
                                </tbody>
                            </table>
      
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>



